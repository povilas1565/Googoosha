<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".screens.fragment.ChangePhoneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:tint="@color/black_text_color"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/settings_view_color"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <TextView
                style="@style/medium_16"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/phone_change"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/bold_16sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:text="@string/four_last_digits_of_the_phone"
                android:textSize="14sp" />

            <TextView
                style="@style/medium_16"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:maxLength="4"
                android:text="@string/four_last_digits_of_the_phone_text"
                android:textColor="@color/gray_color"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/auth_btn"
                style="@style/btn_corner_32"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/pink_color"
                android:text="@string/next"
                android:textColor="@color/white" />


            <TextView
                style="@style/bold_16sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:text="@string/sms_code"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1" />

            <TextView
                style="@style/medium_16"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:maxLength="4"
                android:text="@string/sms_code_text"
                android:textColor="@color/gray_color"
                android:textSize="14sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_btn"
                style="@style/btn_corner_32"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/pink_color"
                android:text="@string/next"
                android:textColor="@color/white" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>