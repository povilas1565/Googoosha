<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_image"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:cardBackgroundColor="@color/pink_color"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        style="@style/bold_16sp"
        android:layout_marginTop="0dp"
        android:text="@string/jennifer_martin"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintTop_toTopOf="@id/item_image" />

    <TextView
        android:id="@+id/item_text"
        style="@style/medium_16"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:text="@string/send_request"
        android:textColor="@color/gray_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_name"
        app:layout_constraintEnd_toStartOf="@id/accept_btn"
        app:layout_constraintStart_toEndOf="@id/item_name"
        app:layout_constraintTop_toTopOf="@id/item_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:background="@drawable/corner_32"
        android:backgroundTint="@color/pink_color"
        android:text="@string/to_accept"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_image" />

</androidx.constraintlayout.widget.ConstraintLayout>