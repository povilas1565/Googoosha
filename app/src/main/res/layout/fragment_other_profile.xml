<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".screens.OtherProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="84dp"
            android:scaleType="centerCrop"
            android:src="@drawable/call_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="36dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="16dp"
            app:tint="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-256dp"
        android:background="@drawable/corner_32"
        android:backgroundTint="@color/bg_color"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Shakila Mahmud, 25"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    style="@style/medium_16"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="start"
                    android:text="Студент Оскфордского университета"
                    android:textColor="@color/gray_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/pink_color"
                app:cardCornerRadius="200dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/message_send" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            style="@style/screen_title"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:text="@string/location" />

        <TextView
            style="@style/medium_16"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="@string/location_example"
            android:textColor="@color/gray_color"
            android:textSize="14sp" />

        <TextView
            style="@style/screen_title"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:text="@string/info" />

        <TextView
            style="@style/medium_16"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="@string/info_example"
            android:textColor="@color/gray_color"
            android:textSize="14sp" />

        <TextView
            style="@style/screen_title"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:text="@string/interested" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/stroke_corner_32"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/films"
                android:textColor="@color/black_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/stroke_corner_32"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/travel"
                android:textColor="@color/black_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/stroke_corner_32"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/food"
                android:textColor="@color/black_text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            style="@style/screen_title"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:text="@string/gallery" />


    </LinearLayout>

</LinearLayout>