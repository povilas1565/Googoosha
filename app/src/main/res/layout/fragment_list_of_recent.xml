<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".screens.fragment.ListOfRecentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:tint="@color/black_text_color"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lasts_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/settings_view_color"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <TextView
                    style="@style/medium_16"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="@string/connection_list"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/help_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:tint="@color/black_text_color"
            android:src="@drawable/help" />

    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/bold_16sp"
                    android:text="@string/today"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/settings_view_color"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <TextView
                        style="@style/medium_16"
                        android:layout_weight="0.1"
                        android:gravity="start"
                        android:text="@string/current"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/usbek" />

                    <TextView
                        style="@style/medium_16"
                        android:layout_weight="0.1"
                        android:gravity="end"
                        android:text="@string/numbers1"
                        android:textSize="15sp" />


                </LinearLayout>

                <TextView
                    style="@style/bold_16sp"
                    android:text="@string/october_18"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/october_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/settings_view_color"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <TextView
                        style="@style/medium_16"
                        android:layout_weight="0.1"
                        android:gravity="start"
                        android:text="@string/offline"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/usbek" />

                    <TextView
                        style="@style/medium_16"
                        android:layout_weight="0.1"
                        android:gravity="end"
                        android:text="@string/numbers2"
                        android:textSize="15sp" />
                </LinearLayout>



                <TextView
                    style="@style/bold_16sp"
                    android:text="@string/april_24"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/april_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/settings_view_color"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <TextView
                        style="@style/medium_16"
                        android:layout_weight="0.1"
                        android:gravity="start"
                        android:text="@string/offline"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/usbek" />

                    <TextView
                        style="@style/medium_16"
                        android:layout_weight="0.1"
                        android:gravity="end"
                        android:text="@string/numbers3"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
