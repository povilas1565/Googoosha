<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".screens.SafetyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:tint="@color/black_text_color"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            style="@style/screen_title"
            android:layout_marginEnd="32dp"
            android:text="@string/safety" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_passwords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/about_password"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/binding_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/binding_phone"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_hacking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/about_hacking"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hacking_pincodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/hacking_pincodes"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sending_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/sending_sms"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_phones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/about_phones"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/general_recommendations"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/user_agreement"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/spam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/invite_to_site"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:layout_weight="0.1"
            android:gravity="start"
            android:text="@string/connections_history"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next" />

    </LinearLayout>

</LinearLayout>