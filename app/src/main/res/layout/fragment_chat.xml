<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".screens.ChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_back" />

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/pink_color"
            app:cardCornerRadius="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/screen_title"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Jenifer Martin" />

            <TextView
                android:id="@+id/online"
                style="@style/medium_16"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Онлайн"
                android:textColor="@color/gray_color" />


        </LinearLayout>


        <ImageView
            android:id="@+id/call_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/video_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:src="@drawable/menu_dots" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/corner_32"
        android:backgroundTint="@color/message_input_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:cardBackgroundColor="@color/input_text_color"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:contentPadding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/plus"
                app:tint="@color/gray_color" />

        </androidx.cardview.widget.CardView>

        <EditText
            style="@style/medium_16"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start"
            android:text="@string/enter_message_there"
            android:textColor="@color/gray_color" />

        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardBackgroundColor="@color/pink_color"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:contentPadding="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/message_send" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>