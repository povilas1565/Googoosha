<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".screens.fragment.GiftsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:tint="@color/black_text_color"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/title"
                style="@style/screen_title"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/gifts" />

            <ImageView
                android:id="@+id/filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                android:src="@drawable/filter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/gift_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gift_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/gift_3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gift_4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/gift_5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gift_6" />

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:visibility="invisible"
        android:id="@+id/alpha_bg"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_32"
        android:layout_marginBottom="-32dp"
        android:id="@+id/filter_view"
        android:visibility="invisible"
        android:backgroundTint="@color/bg_color"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_cross"
                app:tint="@color/black" />

            <TextView
                style="@style/screen_title"
                android:layout_weight="1"
                android:text="@string/filters" />

            <TextView
                style="@style/medium_16"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="@string/to_clear"
                android:textColor="@color/gray_color" />

        </LinearLayout>

        <TextView
            style="@style/screen_title"
            android:layout_marginTop="28dp"
            android:gravity="start"
            android:text="@string/type" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/screen_title"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/flowers"
                android:textColor="@color/gray_color" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/next"
                app:tint="@color/gray_color" />

        </LinearLayout>

        <TextView
            style="@style/screen_title"
            android:layout_marginTop="28dp"
            android:gravity="start"
            android:text="@string/price" />

        <TextView
            style="@style/screen_title"
            android:textSize="14sp"
            android:gravity="end"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/_1_200" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/screen_title"
            android:layout_marginTop="28dp"
            android:gravity="start"
            android:text="@string/for_who_gift" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white_text_color"
                android:background="@drawable/corner_32"
                android:backgroundTint="@color/pink_color"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/man"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/gray_color"
                android:background="@drawable/stroke_corner_32"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/women"/>

        </LinearLayout>

        <Button
            style="@style/btn_corner_32"
            android:textColor="@color/white_text_color"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="24dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="56dp"
            android:text="@string/to_save_edits"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

