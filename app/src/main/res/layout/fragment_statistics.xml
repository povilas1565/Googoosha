<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".screens.fragment.StatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            app:tint="@color/black_text_color"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/statistics"
            style="@style/screen_title"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:text="@string/statistics" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="112dp"
            android:layout_height="62dp"
            android:gravity="center"
            android:src="@drawable/users" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statistics_users"
                style="@style/screen_title"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:text="@string/users" />

        </LinearLayout>

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black_text_color"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="376dp"
            android:layout_height="91dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/moneys_from_sale" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/all_earned" />

        <ImageView
            android:layout_width="373dp"
            android:layout_height="132dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/graph" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn"
            style="@style/btn_corner_32"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:backgroundTint="@color/black"
            android:text="@string/find_out"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="376dp"
            android:layout_height="91dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/all_users" />

        <ImageView
            android:layout_width="376dp"
            android:layout_height="91dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/users_with_vip" />

    </LinearLayout>
</LinearLayout>


