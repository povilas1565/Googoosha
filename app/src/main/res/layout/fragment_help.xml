<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".screens.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            style="@style/screen_title"
            android:layout_marginEnd="32dp"
            android:text="@string/help" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/safety"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/safety"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guide"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/guide_for_beginners"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friendship"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/friendship_chatting"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/replenishment"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/replenishment_balance"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/services"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/services"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/profile_settings"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photos"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/photos"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rules"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/site_rules"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_agreement"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/user_agreement"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/about_app"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/medium_16"
            android:gravity="start"
            android:layout_weight="0.1"
            android:text="@string/about_app"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />

    </LinearLayout>

</LinearLayout>